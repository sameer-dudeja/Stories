<h3>Welcome {{name}}</h3>
<h5>Here are your stories</h5>
{{#if stories}}

  <table class='striped'>
    <thead>
      <tr>
        <th>Title</th>
        <th>Date</th>
        <th>Status</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      {{#each stories}}
        <tr>
          <td><a href='/stories/{{_id}}' title='Title'>{{title}}</a></td>
          <td>{{formatDate createdAt 'MMMM Do YYYY, h:mm:ss a'}}</td>
          <td><span class='dash-status'>{{status}}</span></td>
          <td>
            <a
              href='/stories/edit/{{_id}}'
              title='Edit Story'
              class='btn btn-float'
            >
              <i class='fas fa-small fa-edit'></i>
            </a>

            <form action='/stories/{{_id}}' method='POST' id='delete-form'>
              <input type='hidden' name='_method' value='DELETE' />
              <button type='submit' class='btn red' title='Delete Story'>
                <i class='fas fa-small fa-trash'></i>
              </button>
            </form>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>

{{else}}
  <p>You have not created any Stories</p>
{{/if}}